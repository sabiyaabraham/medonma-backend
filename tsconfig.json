{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "lib": [
      "es2015",
      "es2017.object",
      "dom",
      "es2017.string",
      "es2017.intl",
      "es2017.sharedmemory",
      "es2017.typedarrays",
      "es2018.asyncgenerator",
      "es2018.promise",
      "es2018.regexp",
      "es2019.array",
      "es2019.object",
      "es2019.string",
      "es2019.symbol",
      "es2020.bigint",
      "es2020.promise"
    ],
    "moduleResolution": "node",
    "strictPropertyInitialization": false
  },
  "paths": {
    "Routes/*": ["src/src/Routes/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "backup"]
}
